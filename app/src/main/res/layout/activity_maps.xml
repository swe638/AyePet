<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.MapsActivity">

    <fragment

        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/map_btm_nav"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_icon"
        android:paddingTop="7dp"
        android:paddingLeft="5dp"
        app:elevation="0dp"

        app:itemIconSize="40dp"
        app:itemIconTint="@drawable/nav_selection"
        app:itemTextColor="@drawable/nav_selection"
        app:menu="@menu/map_bottom_menu"></com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>